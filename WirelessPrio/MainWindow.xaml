<Window x:Class="WirelessPrio.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Model="clr-namespace:Model;assembly=Model"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ViewModel="clr-namespace:WirelessPrio.ViewModel"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="300"
		Width="300"
		Loaded="MainWindow_OnLoaded"
		d:DataContext="{d:DesignInstance ViewModel:MainWindowViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<ComboBox ItemsSource="{Binding Path=WirelessInterfaces}" />
		<ListView Grid.Row="1">
			<ListView.ItemTemplate>
				<DataTemplate DataType="{x:Type Model:Profile}">
					<Grid>
						<TextBlock Text="{Binding ProfileName}" />
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Window>